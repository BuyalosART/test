{
  "name": "lil-gui",
  "version": "0.1.0",
  "description": "",
  "module": "build/lil-gui.module.js",
  "scripts": {
    "build": "npm run icons && npm run sass && npm run rollup",
    "icons": "node -r esm scripts/icons.js",
    "sass": "sass style/main.scss build/lil-gui.css --style=compressed --no-charset --no-source-map",
    "rollup": "rollup -c",
    "lint": "eslint .",
    "api": "node -r esm scripts/api.js",
    "docs": "node -r esm scripts/docs.js",
    "test": "node -r esm scripts/test.js",
    "dev": "npm run build && concurrently npm:dev:*",
    "dev:api": "onchange -i 'src/**/*.js' 'scripts/api.hbs' 'scripts/api.js' -- npm run api",
    "dev:docs": "onchange -i 'API.md' 'README.md' 'scripts/docs*' -- npm run docs",
    "dev:icons": "onchange -i 'style/icons/*.svg' 'scripts/icons.js' -- npm run icons",
    "dev:test": "onchange -i 'build/lil-gui.module.js' 'scripts/test*' -- npm run test",
    "dev:sass": "npm run sass -- --watch",
    "dev:rollup": "npm run rollup -- -w",
    "dev:server": "live-server --watch=build,docs --no-browser"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "esm": "^3.2.25",
    "handlebars": "^4.1.2",
    "highlight.js": "^9.15.10",
    "jsdoc-api": "^5.0.2",
    "live-server": "^1.2.1",
    "markdown-it": "^9.1.0",
    "onchange": "^6.0.0",
    "rollup": "^1.17.0",
    "rollup-plugin-string": "^3.0.0",
    "sass": "^1.22.10",
    "webfont": "^9.0.0"
  },
  "eslintIgnore": [
    "build"
  ]
}
