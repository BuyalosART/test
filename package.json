{
  "name": "lil-gui",
  "version": "0.1.0",
  "description": "",
  "module": "build/lil-gui.module.js",
  "scripts": {
    "lint": "eslint .",
    "icons": "node scripts/icons.js",
    "docs": "node scripts/docs.js",
    "css": "sass style/main.scss build/lil-gui.css --style=compressed --no-charset --no-source-map",
    "js": "rollup -c",
    "dev:docs": "onchange -i 'build/lil-gui.module.js' 'README.md' 'scripts/docs.js' 'scripts/api.hbs' 'docs/template.html' -- npm run docs",
    "dev:icons": "onchange -i 'style/icons/*.svg' -- npm run icons",
    "dev:css": "npm run css -- --watch",
    "dev:js": "npm run js -- -w",
    "dev:server": "live-server --watch=build,docs --no-browser --wait=20",
    "dev": "npm run build && concurrently npm:dev:*",
    "build": "npm run icons && npm run css && npm run js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "handlebars": "^4.1.2",
    "highlight.js": "^9.15.10",
    "jsdoc-api": "^5.0.2",
    "jsdoc-to-markdown": "^5.0.0",
    "live-server": "^1.2.1",
    "markdown-it": "^9.1.0",
    "onchange": "^6.0.0",
    "rollup": "^1.17.0",
    "rollup-plugin-string": "^3.0.0",
    "sass": "^1.22.10",
    "webfont": "^9.0.0"
  },
  "eslintIgnore": [
    "build"
  ]
}
