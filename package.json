{
  "name": "gui",
  "version": "1.0.0",
  "description": "",
  "module": "build/gui.module.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "icons": "node style/iconfont.js",
    "css": "sass style/main.scss build/gui.css --no-source-map",
    "js": "rollup -c",
    "lint": "eslint .",
    "watch-css": "npm run css -- --watch",
    "watch-js": "npm run js -- -w",
    "dev": "concurrently -c magenta,blue,green npm:watch-css npm:watch-js npm:start",
    "start": "live-server --watch=build,demo --open=demo --wait=20",
    "build": "npm run icons && npm run css && npm run js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "live-server": "^1.2.1",
    "rollup": "^1.17.0",
    "rollup-plugin-string": "^3.0.0",
    "sass": "^1.22.10",
    "webfont": "^9.0.0"
  },
  "eslintIgnore": [
    "build"
  ],
  "eslintConfig": {
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "array-bracket-spacing": [ "warn", "always" ],
        "arrow-spacing": "warn",
        "brace-style": [ "warn", "1tbs" ],
        "comma-spacing": "warn",
        "comma-dangle": [ "warn", "never" ],
        "computed-property-spacing": [ "warn", "always" ],
        "eqeqeq": [ "warn", "always" ],
        "func-call-spacing": [ "warn", "never" ],
        "indent": [ "warn", "tab", { "SwitchCase": 1 } ],
        "key-spacing": [ "warn", { "mode": "minimum" } ],
        "keyword-spacing": "warn",
        "linebreak-style": [ "warn", "unix" ],
        "new-parens": "warn",
        "no-extra-semi": "warn",
        "no-multiple-empty-lines": "warn",
        "no-trailing-spaces": [ "warn" ],
        "no-whitespace-before-property": "warn",
        "no-undef": "error",
        "no-var": "warn",
        "object-curly-spacing": [ "warn", "always" ],
        "quotes": [ "warn", "single" ],
        "semi-spacing": "warn",
        "semi": [ "warn", "always" ],
        "space-before-function-paren": [ "warn", "never" ],
        "space-in-parens": [ "warn", "always", { "exceptions": [ "empty" ] } ],
        "space-infix-ops": "warn"
    }
  }
}
